<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActadeEntrega">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView81"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fecha y Hora" />

            <TextView
                android:id="@+id/Fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fecha" />

            <TextView
                android:id="@+id/Hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hora" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ANAM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ResponsableANAM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Seleccione responsable de ANAM" />

            <TextView
                android:id="@+id/NombreANAMvi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NombreANAM" />

            <TextView
                android:id="@+id/PuestoANAMvi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PuestoANAM" />

            <TextView
                android:id="@+id/NumeroempleadoANAM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Numero de Empleado" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/CredFrontalANAM"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/image" />

                <ProgressBar
                    android:id="@+id/Chargin1"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/Chargin2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/CredTraseraANAM"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/image" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CredencialANAM"
                app:srcCompat="@drawable/ic_baseline_person_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PersonalSeguritech"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ResposableSegurtiech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Seleccione responsable de Seguritech" />

            <TextView
                android:id="@+id/nombreSeguritech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NombreANAM" />

            <TextView
                android:id="@+id/Puestoseguritechvi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PuestoANAM" />

            <TextView
                android:id="@+id/EmpleadoSeguritech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Numero de Empleado" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/INEFrontal"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/image" />

                <ProgressBar
                    android:id="@+id/Chargin3"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/Chargin4"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/INETrasero"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/image" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CredencialSeguritech"
                app:srcCompat="@drawable/ic_baseline_person_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Aduana"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resposableSegurtiech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Seleccione Aduana" />

            <TextView
                android:id="@+id/nombreAduana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Aduana" />

            <TextView
                android:id="@+id/DireccionAduana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Direccion" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView82"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Equipo" />

                <EditText
                    android:id="@+id/Equipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="TFN CK-"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView122"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Servicio" />

                <EditText
                    android:id="@+id/Servicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Aduana"
                app:srcCompat="@drawable/ic_baseline_assured_workload_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GeneraActa" />

        <ImageButton
            android:id="@+id/imageButton36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="CreaDocumento"
            app:srcCompat="@drawable/ic_baseline_content_paste_go_24" />
    </LinearLayout>
</ScrollView>